		keep="true"		
        url="plugins/soundinterface.js"
        preload="true"
        rootpath=""
        volume="1.0"
        mute="false"
        />

	<!-- startup action - load the first scene -->
	<action name="startup" autorun="onstart">
		if(startscene === null OR !scene[get(startscene)], copy(startscene,scene[0].name); );
		loadscene(get(startscene), null, MERGE);
		if(startactions !== null, startactions() );
		playsound(512, audio/512.ogg|audio/512.mp3, 1);
	</action>

	<action name="chinchon">
		pausesoundtoggle(512);
		playsound(chinchon, audio/chinchon.ogg |audio/chinchon.mp3, 0.5);
		delayedcall(1.75, stopsound(chinchon));
		delayedcall(1.75, pausesoundtoggle(512));
	</action>

